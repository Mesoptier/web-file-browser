<!doctype html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Viller's web file browser</title>
        <link rel="stylesheet" href="style/default.css" />
    </head>

    <body>
        <div class="title">{{ currentDirectory }}</div>

        <div class="listing-container">
            {% if webpages %}
                <div class="listing listing-webpages">
                    {% for webpage in webpages %}
                        <a class="list-item list-item-webpage">
                            <div class="list-item--name list-item-webpage--name">{{ webpage.name }}</div>
                        </a>
                    {% endfor %}
                </div>
            {% endif %}

            {% if directories %}
                <div class="listing listing-directories">
                    {% for directory in directories %}
                        <a class="list-item list-item-directory">
                            <div class="list-item--name list-item-directory--name">{{ directory.name }}</div>
                        </a>
                    {% endfor %}
                </div>
            {% endif %}

            {% if files %}
                <div class="listing listing-files">
                    {% for file in files %}
                        <a class="list-item list-file-webpage">
                            <div class="list-item--name list-item-file--name">{{ file.name }}</div>
                        </a>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </body>
</html>
